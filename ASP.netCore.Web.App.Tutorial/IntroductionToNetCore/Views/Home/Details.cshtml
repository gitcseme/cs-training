@model HomeDetailsViewModel 

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Details";

    var photoPath = "~/images/" + (Model.employee.PhotoPath ?? "emp.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" alt="Alternate Text" width="200" height="250" asp-append-version="true"/>
                
                <h4>ID : @Model.employee.Id</h4>
                <h4>Email: @Model.employee.Email</h4>
                <h4>Department  : @Model.employee.Department</h4>
            </div>

            <div class="card-footer text-center">

                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return</a>

                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomJavaScript.js"></script>
}