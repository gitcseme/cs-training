@model IEnumerable<Employee>

@{ 
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "emp.jpg");

        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="@photoPath" alt="Alternate Text" width="250" height="250" asp-append-version="true" />
            <div class="card-footer text-center">

                <!--Tag Helper-->
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">Details</a>

                <!--Html Helper-->
                <!--Html.ActionLink("Show", "Details", "Home", new { Id = employee.Id })-->
                <!--Just Html-->
                <!-- <a href="Home/Details/@employee.Id" class="btn btn-primary m-1">View</a> -->
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id"  class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
